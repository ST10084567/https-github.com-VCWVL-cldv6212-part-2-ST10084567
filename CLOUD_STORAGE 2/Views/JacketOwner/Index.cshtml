@model IEnumerable<CLOUD_STORAGE_2.Models.JacketOwner>

<h1>Jacket Owners</h1>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Add New Jacket Owner</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jacketOwner in Model)
        {
            <tr>
                <td>@jacketOwner.JacketOwner_Name</td>
                <td>@jacketOwner.email</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@jacketOwner.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@jacketOwner.RowKey" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this jacket owner?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
