@model CLOUD_STORAGE_2.Models.Jacket

<h2>Add New Jacket</h2>

<form asp-action="AddJacket" method="post" enctype="multipart/form-data">
    <div>
        <label>Name</label>
        <input type="text" name="Jacket_Name" required />
    </div>
    <div>
        <label>Description</label>
        <textarea name="Description"></textarea>
    </div>
    <div>
        <label>Location</label>
        <input type="text" name="Location" required />
    </div>
    <div>
        <label>Image</label>
        <input type="file" name="file" required />
    </div>
    <button type="submit">Add Jacket</button>
</form>
